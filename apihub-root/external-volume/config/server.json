{
  "port": 8080,
  "storage": "../apihub-root",
  "logging": {
    "enabled": true
  },
  "preventRateLimit": true,
  "enableRequestLogger": true,
  "activeEndpoints": [
    "virtualMQ",
    "messaging",
    "notifications",
    "filesManager",
    "bdns",
    "bricksLedger",
    "bricksFabric",
    "bricking",
    "anchoring",
    "iot-adaptor",
    "debugLogger",
    "staticServer"
  
  ],
  "endpointsConfig": {
    "bricking": {
      "domains": {
        "default": {
          "path": "/internal-volume/domains/default/brick-storage"
        },
        "predefined": {
          "path": "/internal-volume/domains/predefined/brick-storage"
        },
        "vault": {
          "path": "/external-volume/domains/vault/brick-storage"
        }
      }
    },

    "anchoring": {
      "domainStrategies": {
        "epi": {
          "type": "FS",
          "option": {
            "path": "/external-volume/domains/epi/anchors",
            "enableBricksLedger": false
          },
          "commands": {
            "addAnchor": "anchor"
          }
        },
        "default": {
          "type": "FS",
          "option": {
            "path": "/internal-volume/domains/default/anchors",
            "enableBricksLedger": false
          },
          "commands": {
            "addAnchor": "anchor"
          }
        },
        "epi2": {
          "type": "ETH",
          "option": {
            "endpoint": "http://a650cecc321a54722a8c32c9a195466a-709616493.eu-west-2.elb.amazonaws.com:3000"
          },
          "commands": {
            "addAnchor": "anchor"
          }
        },
        "predefined": {
          "type": "FS",
          "option": {
            "path": "/internal-volume/domains/predefined/anchors"
          }
        },
        "vault": {
          "type": "FS",
          "option": {
            "path": "/external-volume/domains/vault/anchors"
          }
        }
      }
    },
    "iot-adaptor":{
      "module":"./../../iot-adaptor",
      "domainStrategies":{
        "default":{
          "type":"IotAdaptor",
          "option":{
            "endpoint":"http://127.0.0.1:1000/adaptor"
            }
          }
        }
    }
  },
  "enableAuthorisation": false,
  "enableLocalhostAuthorization": false,
  "skipAuthorisation": [
    "/assets",
    "/directory-summary",
    "/resources",
    "/bdns",
    "/anchor/epi",
    "/anchor/default",
    "/anchor/vault",
    "/bricking",
    "/bricksFabric",
    "/bricksledger",
    "/create-channel",
    "/forward-zeromq",
    "/send-message",
    "/receive-message",
    "/files",
    "/notifications",
    "/mq"
  ]
}
